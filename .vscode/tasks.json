{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-I/Library/Frameworks/SDL2.framework/Headers",
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "${file}",
                "-o",
                "${fileDirname}/main"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile C++ with SDL2 framework"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I/Library/Frameworks/SDL2.framework/Headers",
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "${file}",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}